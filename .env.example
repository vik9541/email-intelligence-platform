# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=email-service
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
